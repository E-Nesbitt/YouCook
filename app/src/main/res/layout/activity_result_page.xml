<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ethannesbitt.youcook.ResultPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">

            <WebView
                android:id="@+id/web_view_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

            </WebView>

        <ImageView
            android:id="@+id/image_result_single"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:contentDescription="@string/recipe_image"
            android:src="@drawable/chicken"/>

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_bold"
            android:textSize="30sp"/>

        <!--<TextView-->
            <!--android:id="@+id/recipe_id_title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:fontFamily="@font/nunito_bold"-->
            <!--android:text="@string/recipe_id_text"-->
            <!--android:textSize="18sp" />-->

        <!--<TextView-->
            <!--android:id="@+id/recipe_id"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="8dp"-->
            <!--android:fontFamily="@font/nunito" />-->

        <TextView
            android:id="@+id/recipe_publisher_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:textSize="18sp"
            android:text="@string/recipe_publisher_text"/>

        <TextView
            android:id="@+id/recipe_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito" />

        <TextView
            android:id="@+id/ingredient_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:textSize="18sp"
            android:text="@string/recipe_ingredients"/>

        <TextView
            android:id="@+id/recipe_ingredient_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito" />

        <TextView
            android:id="@+id/recipe_link_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/recipe_link_text"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/recipe_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/nunito"
            android:textIsSelectable="true"/>
            <!--android:autoLink="web"-->

        <Button
            android:id="@+id/view_full_recipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="View the whole recipe"
            android:fontFamily="@font/nunito_bold"
            android:background="@drawable/button_layout"
            android:textColor="@color/backgroundcolour"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/food2forklogo2"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/food2fork"/>

    </LinearLayout>

</ScrollView>